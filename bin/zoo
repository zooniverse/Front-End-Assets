#!/usr/bin/env ruby

require 'erb'
require 'fileutils'

TemplateDir = File.join File.dirname(__FILE__), '..', 'templates'
TemplateExt = '.erb'

Options = {
  :templates_only => ARGV.delete('--templates') || ARGV.delete('-t') # Mainly for development of this tool
}

def to_dashed (str)
  str.downcase.gsub /\s+/, '-'
end

def to_underscored (str)
  str.downcase.gsub /\s+/, '_'
end

def to_camel_cased (str)
  str.downcase.gsub(/\s+\w/) {|x| x.upcase.sub /\s+/, ''}
end

def log (prefix, message)
 puts prefix + (' ' * (4 - prefix.length)) + message
end

def run_templates (type, binding)
  templates_search = File.join TemplateDir, type, '**', "*#{TemplateExt}"
  templates = Dir.glob(templates_search, File::FNM_DOTMATCH).select {|item| File.file? item}

  templates.each do |file|
    template = ERB.new File.read file

    local_file = file.sub File.join(TemplateDir, type), '.'

    local_file.sub! /__([A-Z,_]+)__/ do |var|
      var.gsub! /^__|__$/, ''
      var.downcase!
      eval(var, binding).to_s
    end

    local_file.sub! TemplateExt, ''

    log '+', local_file

    if File.exists? local_file
      log '', 'File already exists!'
    else
      FileUtils.mkdir_p File.dirname local_file
      new_file = File.new local_file, 'w'
      new_file.write template.result binding
      new_file.close
    end
  end

  dirs_search = File.join TemplateDir, type, '**', '**'
  directories = Dir.glob(dirs_search).select {|item| File.directory? item}
  # TODO: Dot-prefixed dirs?
  directories.each do |dir|
    local_dir = dir.sub File.join(TemplateDir, type), '.'
    unless File.directory? local_dir
      log '+', "#{local_dir}/"
      FileUtils.mkdir_p local_dir
    end
  end
end

command = ARGV.shift
case command.to_sym
when :init
  project = ARGV.join ' '
  project = 'New Zoo' if project.empty?

  project_js = to_camel_cased project
  project_dash = to_dashed project
  project_under = to_underscored project

  log '-=>', "Initializing a new zoo: #{project}"
  run_templates command, binding

  unless Options[:templates_only]
    log '-=>', 'Cloning front-end Zooniverse library into ./src/scripts/lib/zooniverse'
    system 'git clone git@github.com:zooniverse/Front-End-Assets.git -b framework ./src/scripts/lib/zooniverse'
  end

  unless Options[:templates_only]
    log '-=>', 'Installing third-party assets'
    system 'grabass ./assets.json'
  end

when :generate, :g
  generator = ARGV.shift
  ARGV.each do |name|
    log '-=>', "Generating a new #{generator}: #{name}"
    run_templates generator.to_s, binding
  end

when :dev
  port = ARGV.shift || 8080

  log '-=>', "Serving at http://localhost:#{port}/"

  Process.spawn "python -m SimpleHTTPServer #{port}"
  Process.spawn 'coffee --compile --output . --watch ./src'
  Process.spawn 'sass --watch ./src:. --no-cache --debug-info'
  Process.wait

when :build
  log '', 'TODO: Package everything up into a directory Jekyll-style'

when :deploy
  log '', 'TODO: Build and push to S3'
end
